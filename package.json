{
  "name": "devenv-template",
  "version": "2.0.0",
  "description": "Ship quality code faster - Development environment for indie developers & solo founders",
  "bin": {
    "devenv-init": "./scripts/init.js"
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "prebuild": "tsc --noEmit",
    "test": "node --test tests/**/*.test.js",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:integration": "node --test tests/integration/**/*.test.js",
    "test:fast": "node --test tests/unit/**/*.test.js",
    "test:slow": "node --test tests/integration/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "agent:init": "node scripts/agent/cli-simple.js",
    "agent:init:advanced": "node scripts/agent/cli.js",
    "agent:questions": "node scripts/agent/questionnaire.js",
    "cleanup": "node scripts/cleanup/cli.js",
    "cleanup:dry-run": "node scripts/cleanup/cli.js --dry-run",
    "cleanup:apply": "node scripts/cleanup/cli.js --apply",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "lint-staged-DISABLED": {
    "comment": "Disabled due to file loss issues during Phase 4c. Run 'npm run format' manually before commits.",
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.10.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "archiver": "^7.0.1",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@cyclonedx/cyclonedx-npm": "^1.16.1",
    "@types/node": "^20.10.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.2",
    "mock-fs": "^5.5.0",
    "prettier": "^3.6.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.0"
  }
}
